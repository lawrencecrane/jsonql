{
    "compilerOptions": {
        "module": "commonjs",
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "lib": ["es2016"],
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}
